{% macro reset_passed_jobs(configs, job_names) %}
    {% call(x) for_each_config(configs) %}
        {% set image_resource_name = 'gpdb' ~ x.gp_ver ~ '-pxf-dev-' ~ x.test_platform ~ '-image' %}
        {% set tarball_resource_name = 'pxf-gp' ~ x.gp_ver ~ '-tarball-' ~ x.release_platform %}
        {% set gpdb_resource_name = 'gpdb' ~ x.gp_ver ~ '-' ~ x.release_platform ~ '-' ~ x.pkg_type ~ '-latest-0'%}
        {% do job_names.images.update({image_resource_name : []}) %}
        {% do job_names.tarballs.update({tarball_resource_name : []}) %}
        {% do job_names.gpdb_packages.update({gpdb_resource_name : []}) %}
    {% endcall %}
{% endmacro %}

{% macro add_test_job(file_name, x, job_names, extra_list_name) %}
    {% include file_name %}
    {% do job_names.all.append(x.job_name) %}

    {% set image_resource_name = 'gpdb' ~ x.gp_ver ~ '-pxf-dev-' ~ x.test_platform ~ '-image' %}
    {% do job_names.images.update({image_resource_name: job_names.images[image_resource_name] + [x.job_name]}) %}

    {% set tarball_resource_name = 'pxf-gp' ~ x.gp_ver ~ '-tarball-' ~ x.release_platform %}
    {% do job_names.tarballs.update({tarball_resource_name: job_names.tarballs[tarball_resource_name] + [x.job_name]}) %}

    {% set gpdb_resource_name = 'gpdb' ~ x.gp_ver ~ '-' ~ x.release_platform ~ '-' ~ x.pkg_type ~ '-latest-0'%}
    {% do job_names.gpdb_packages.update({gpdb_resource_name: job_names.gpdb_packages[gpdb_resource_name] + [x.job_name]}) %}

    {% do job_names.tests.update({extra_list_name: job_names.tests[extra_list_name] + [x.job_name]}) %}
{% endmacro %}

{% macro add_gate_job(file_name, job_names, env_var, build_test_pxf_combinations) %}
    {% set supported_build_platforms={}%}
    {% call(x) for_each_config(build_test_pxf_combinations) %}
        {% do supported_build_platforms.update({ x.build_platform : x.pxf_release_repackage_image}) %}
    {% endcall %}
    {# set a fake dictionary so that the job can populate the job_name #}
    {% set x = dict() %}
    {% set environment = env_var %}
    {% include file_name %}
    {% do job_names.all.append(x.job_name) %}
{% endmacro %}
